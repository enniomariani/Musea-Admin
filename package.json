{
  "name": "musea-admin",
  "author": "Ennio Mariani",
  "email": "mail@enniomariani.ch",
  "version": "1.0.0",
  "description": "App for organizing and managing media files within Musea media players",
  "type": "module",
  "main": "./build/main/main.js",
  "scripts": {
    "test": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js ./tests --maxWorkers=50%",
    "e2e": "cls && wdio run wdio.conf.js",
    "e2eOneFile": "cls && wdio --spec e2e/FolderScreenOnlyWithController.e2e.ts",
    "dev": "cross-env NODE_ENV=development npm start",
    "start": "electron-forge start",
    "build": "vue-tsc -p ./src/renderer/tsconfig.json --noEmit && vite build && tsc -p ./src/main/tsconfig.json && tsc-alias -p ./src/main/tsconfig.json",
    "prepackage": "npm run build",
    "package": "electron-forge package",
    "publish": "electron-forge publish"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.0",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.0",
    "@electron-forge/plugin-fuses": "^7.10.0",
    "@electron-forge/publisher-github": "^7.10.2",
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.0",
    "@types/ping": "^0.4.4",
    "@vitejs/plugin-vue": "^6.0.1",
    "@wdio/cli": "^9.20.0",
    "@wdio/local-runner": "^9.20.0",
    "@wdio/mocha-framework": "^9.20.0",
    "@wdio/spec-reporter": "^9.20.0",
    "cross-env": "^10.1.0",
    "electron": "^38.2.2",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-websocket-mock": "^2.5.0",
    "ts-jest": "^29.4.4",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vue": "^3.5.22",
    "vue-tsc": "^3.1.1",
    "wdio-electron-service": "^9.1.2",
    "ws": "^8.18.3"
  },
  "dependencies": {
    "jsonschema": "^1.5.0",
    "musea-client": "^1.0.7",
    "ping": "^1.0.0",
    "vue-i18n": "^11.1.12"
  }
}
